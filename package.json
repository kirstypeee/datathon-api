    "start": "node ./dist/index.js",
    "dev": "NODE_ENV=development ts-node-dev src/index.ts",
    "test": "NODE_ENV=development jest --forceExit --runInBand",
    "test-watch": "NODE_ENV=development jest  --runInBand"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^23.1.3",
    "@types/lodash": "^4.14.110",
    "@types/node": "^10.9.2",
    "babel-core": "^6.26.3",
    "body-parser": "^1.18.3",
    "helmet": "^3.14.0",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.4",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bluemix-autoscaling-agent": "*",
    "body-parser": "^1.18.3",
    "cfenv": "^1.0.4",
    "compression": "^1.7.1",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "garage-utils": "^4.0.1",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "node-fetch": "^2.1.2"
  },
  "engines": {
    "node": "10.12.0",
    "npm": "6.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "roots": [
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "scr"
    ]
  }
